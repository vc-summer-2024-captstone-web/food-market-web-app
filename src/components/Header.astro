  header nav ul li {
    margin-right: 10px;
    display: flex;
    align-items: center;
  }
  header nav ul li a {
    color: #000;
    text-decoration: none;
    font-size: 16px;
    padding: 5px 10px;
    transition: background-color 0.3s, color 0.3s;
  }
  header nav ul li a:hover, header nav ul li a:focus {
    background-color: #f0f0f0;
    color: #555;
    border-radius: 5px;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
