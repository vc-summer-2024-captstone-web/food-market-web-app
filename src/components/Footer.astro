<style>
  footer {
    background: #fff;
    color: #000;
    text-align: center;
    padding: 20px 0;
    border-top: 1px solid #ddd;
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
  }
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start; /* Align items at the top of the flex container */
    max-width: 1200px;
    margin: 0 auto 10px;
    padding: 0 20px;
    flex-wrap: wrap;
  }
  .footer-links {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 10px;
  }
  .footer-links a {
    color: #000;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s;
  }
  .footer-links a:hover {
    color: #007bff;
  }
  .footer-social {
    display: flex;
    flex-direction: row;
    align-items: center; /* Center align the icons horizontally */
  }
  .footer-social a {
    margin-right: 25px; /* Add margin between each object */
    display: flex;
    align-items: center;
    color: #000;
    transition: transform 0.3s;
  }
  .footer-social a:hover {
    transform: scale(1.2);
    color: #007bff;
  }
  p {
    margin: 0;
    padding: 0;
    font-size: 14px;
  }
  svg {
    fill: currentColor;
  }
</style>
