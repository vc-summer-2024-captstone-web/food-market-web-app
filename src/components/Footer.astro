<style>
  footer {
    background: #fff;
    color: #000;
    text-align: center;
    padding: 20px 0;
    border-top: 1px solid #ddd;
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
  }
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto 10px;
    padding: 0 20px;
    flex-wrap: wrap;
  }
  .footer-links {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 10px;
  }
  .footer-links a {
    color: #000;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s;
  }
  .footer-links a:hover {
    color: #007BFF;
  }
  .footer-social a {
    margin: 0 10px;
  }
  .footer-social img {
    width: 24px;
    height: 24px;
    transition: transform 0.3s;
  }
  .footer-social img:hover {
    transform: scale(1.2);
  }
  p {
    margin: 0;
    padding: 0;
    font-size: 14px;
  }
</style>
