---
import Layout from '../layouts/Layout.astro';
---

<Layout title="FAQs - Food Market App">
  <div class="content-container">
    <h1>FAQs</h1>
    <h2>Question 1</h2>
    <p>Answer to question 1.</p>
    <h2>Question 2</h2>
    <p>Answer to question 2.</p>
  </div>
</Layout>

<style>
  .content-container {
    flex: 1;
    max-width: 1200px;
    margin: 20px auto;
    padding: 40px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    animation: fadeIn 1.5s ease-in-out;
  }
  h1 {
    font-size: 36px;
    margin-bottom: 20px;
    color: #333;
  }
  h2 {
    font-size: 24px;
    margin-top: 20px;
    color: #333;
  }
  p {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 20px;
    color: #555;
  }
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
